---
interface Props {
  url: string;
  title: string;
}
const { url, title } = Astro.props;
---

<a
  href={url}
  class="w-4/4 inline-block px-6 md:px-2 lg:px-6 py-4 focus:decoration-solid hover:decoration-solid
    text-gray-5 hover:drop-shadow-[0_0_16px_rgb(20_184_166)] hover:text-teal-600 font-bold text-lg md:text-base lg:text-lg
    hover:shadow-[inset_0_-3px_0_0_rgba(20,184,166,1)] transition-all duration-300 ease-in-out"
>
  {title}
</a>
