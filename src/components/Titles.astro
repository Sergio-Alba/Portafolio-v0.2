---
interface Props {
  url: string;
  title:string;
}
const { url,title } = Astro.props;
---
<a href={url} class=" font-bold text-2xl select-none pointer-events-none px-1 py-4 flex gap-2 z-0 bg-[length:200%] bg-gradient-to-r from-cyan-400 via-purple-400 to-cyan-400 animate-bg_slow text-transparent bg-clip-text  ">
  <slot/> {title}
</a>