---
import type {Icons} from "../img";
import { skills } from "../../cv.json"
import Sass from "../icons/skills/sass.astro"
import Html from "../icons/skills/html.astro"
import Css from "../icons/skills/css.astro"
import JavaScript from "../icons/skills/javascript.astro"
import Tailwind from "../icons/skills/tailwind.astro"
import TypeScript from "../icons/skills/typescript.astro"
import React from "../icons/skills/react.astro"
import Astr from "../icons/skills/astr.astro"
import Next from "../icons/skills/nextjs.astro"
import Node from "../icons/skills/nodejs.astro"
import Java from "../icons/skills/java.astro"
import Spring from "../icons/skills/spring.astro"
import Sql from "../icons/skills/sql.astro"
import PostgresQl from "../icons/skills/postgresql.astro"
import Git from "../icons/skills/git.astro"
import GitHub from "../icons/skills/github.astro"
const SKILLS_ICONS: Icons= {
  Html,
  Css,
  Sass,
  Tailwind,
  JavaScript,
  TypeScript,
  React,
  Astr,
  Next,
  Node,
  Java,
  Spring,
  Sql,
  PostgresQl,
  Git,
  GitHub
}
---

<section class="pt-4">
  <div class="px-4 mx-auto text-center max-w-7xl sm:px-6 lg:px-8">
    <h2 class="mb-12 text-3xl font-extrabold tracking-tight sm:text-4xl">
      Habilidades
    </h2>

    <ul
      class="grid grid-cols-3 gap-4 gap-y-10 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-7 lg:gap-6 justify-items-center"
    >
    {
      skills.map(({name, color}) => {
        const iconName = name === "Astro" ? "Astr" : name
        const Icon = SKILLS_ICONS[iconName];
        return ( 
            <li class={`relative rounded-lg  w-20 h-20 hover:scale-110 transition-transform duration-300 ease-in-out`}
            style={`background-color: ${color}; `}>
              <div class="absolute flex flex-col items-center justify-center w-full h-full gap-1 border rounded-md border-slate-500 bg-gradient-to-b from-slate-950 via-slate-950/90 to-slate-950/70 backdrop:blur-md group">
                {Icon && (
                  <Icon class="size-10 md:size-16 "/> 
                    <span
                        class="absolute z-20 transition-all duration-1000 ease-in-out translate-y-0 opacity-0 bottom-1 before:absolute before:-inset-0.5 before:block before:-skew-y-1 before:bg-blue-500 group-hover:opacity-100 group-hover:translate-y-8 group-hover:pointer-events-auto"
                    >
                      <span class="relative text-sm italic">{name}</span>
                    </span>

                  )
                } 
              </div>
            </li>
          )
        })
    }
    </ul>
  </div>
</section>
