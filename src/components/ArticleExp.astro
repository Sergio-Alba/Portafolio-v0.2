---
interface Props{
  name:string,
  date:string|number,
  summary:string,
  company:string[]
}
const {name,date,summary,company} = Astro.props;
---
<article class="w-full py-8  border-l-2 border-indigo-900  grid grid-cols-6 gap-y-2  relative -z-0">
  <span class="absolute h-6 w-6 block bg-yellow-400 -left-3 top-12 rounded-2xl"></span>
  <h1 class=" col-start-2 col-span-3 text-yellow-500 text-2xl font-bold ">{name}</h1>
  <h2 class="col-start-2 col-span-6 dark:text-white font-light ">{company}</h2>
  <h3 class=" col-start-2 col-span-2 text-gray-400 text-xs font-extralight ">{date}</h3>
  <p class="col-start-2 col-span-6 text-ms font-extralight  ">{summary}</p>

</article>