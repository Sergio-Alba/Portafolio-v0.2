---
import { basics } from "@cv";
import type { Icons } from "@/img";
import Download from "@/icons/download.astro";
import LinkedIn from "@/icons/linkedin.astro";
import GitHub from "@/icons/skills/github.astro";
import React from "@/icons/skills/react.astro";
import Typescript from "@/icons/skills/typescript.astro";
import Css from "@/icons/skills/css.astro";
import Html from "@/icons/skills/html.astro";
import HeroIcons from "../HeroIcons.astro";

const { profiles } = basics;
const SOCIAL_ICONS: Icons = {
  LinkedIn,
  GitHub,
};
interface Props {
  id: string;
}
const { id } = Astro.props;
---

<section
  id={id}
  class="flex flex-col items-center justify-center overflow-hidden italic md:w-5/6 md:m-auto md:mx-auto md:flex-row md:items-center md:justify-between lg:h-screen lg:flex xl:px-16"
>
  <div
    class="w-full mt-32 md:w-3/6 flex flex-col justify-center items-center lg:mb-6 lg:w-2/5 lg:h-[32rem]"
  >
    <div class="w-full md:h-full lg:h-[60%] flex justify-center items-center relative">
      <img
        src="./darth_vader-removebg-preview.png"
        alt=""
        class="w-4/5 md:w-[100%] drop-shadow-[0_0px_10px_lightblue] hover:drop-shadow-[0_0px_20px_white]"
      />
      <div
      class="w-[80%] h-full md:w-full md:h-full lg:h-[70%] 2xl:h-full absolute rounded-full"
    >
      <HeroIcons title="HTML" position="top-[40%] left-0">
        <Html
          class="w-12 h-12 md:w-12 lg:w-16 lg:h-16 md:h-12 object-contain drop-shadow-[0_0_10px_#ffa25ad7] hover:drop-shadow-[0_0_20px_#ffa25ad7]"
        />
      </HeroIcons>
      <HeroIcons title="CSS" position="bottom-8 md:bottom-0 left-[20%]">
        <Css
          class="w-12 h-12 md:w-12 md:h-12 lg:w-16 lg:h-16 object-contain drop-shadow-[0_0_10px_#510080] hover:drop-shadow-[0_0_20px_#510080]"
        />
      </HeroIcons>
      <HeroIcons title="TypeScript" position="bottom-8 md:bottom-0 right-[20%]">
        <Typescript
          class="w-12 h-12 md:w-12 md:h-12 lg:w-16 lg:h-16 object-contain drop-shadow-[0_0_10px_#004680] hover:drop-shadow-[0_0_20px_#004680]"
        />
      </HeroIcons>
      <HeroIcons title="React" position="top-[40%] right-0 ">
        <React
          class="w-12 h-12 md:w-12 md:h-12 lg:w-16 lg:h-16 object-contain drop-shadow-[0_0_10px_teal] hover:drop-shadow-[0_0_20px_teal]"
        />
      </HeroIcons>
    </div>
    </div>
    
  </div>
  <div
    class="flex flex-col items-center justify-center w-full gap-3 xl:px-12 md:w-4/6 md:items-start md:gap-5 lg:w-3/5"
  >
    <h2
      class="text-base font-semibold px-2 text-sky-600 hover:drop-shadow-[0_0_15px_rgb(2_132_199)]
             lg:text-2xl"
    >
      Bienvenido a mi portafolio
    </h2>
    <h1
      class="italic font-extrabold text-3xl/8 lg:text-7xl xl:text-8xl font-jetBrains "
    >
      Sergio Alba
    </h1>
    <h2 class="px-2 text-base font-bold lg:text-2xl">
      soy un
      <span
        class="text-purple-500 hover:drop-shadow-[0_0_15px_rgb(168_85_347)]"
      >
        Desarrollador Front-end
      </span>
    </h2>
    <section class="flex flex-col items-center w-4/6 gap-4">
      <div class="flex items-center w-4/6 gap-3 justify-evenly">
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <a
                class={`${network} w-auto flex items-center text-black dark:text-white  gap-4 hover:scale-105`}
                href={url}
                title={`Visitar el perfil de ${username} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon
                  class={`${network == "LinkedIn" ? " hover:drop-shadow-[0_0_15px_#0A66C2]" : "hover:drop-shadow-[0_0_15px_orange]"} size-8 md:size-10 lg:size-12`}
                />
              </a>
            );
          })
        }
      </div>
      <a
        class="w-full mb-4 xl:w-2/3 bg-gradient-to-r from-green-400/75 to-blue-500/75 hover:from-green-400 hover:to-blue-400
                hover:shadow-[0px_0px_20px_5px_#00000080] dark:hover:shadow-[0px_0px_20px_5px_#ffffff70] transition-all text-lg px-2 py-4 rounded-lg flex 
                gap-2 justify-center items-center active:shadow-[inset_10px_10px_15px_-3px_#00020] lg:text-center md:px-2"
        href="../assets/formato.pdf"
        target="_blank"
        rel="noopener noreferrer"
        title="Descargar CV"><Download class="size-{1em]" /> Descargar CV</a
      >
    </section>
  </div>
</section>
