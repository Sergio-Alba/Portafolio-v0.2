---
import { basics } from "@cv";
import LinkedIn from "@/icons/linkedin.astro";
import X from "@/icons/x.astro"
import GitHub from "@/icons/skills/github.astro";
import type { Icons } from '@/img'
import Download from "@/icons/download.astro";

const { name, label, image , profiles} = basics
const SOCIAL_ICONS:Icons = {
  GitHub,
  LinkedIn,
  X,
}

---

<section class="w-4/5 lg:w-80  min-h-min  bg-white/80 dark:bg-slate-800 rounded-2xl relative flex flex-col justify-center items-center text-gray-800 dark:text-white  lg:sticky lg:top-24 " > 
  <img class="relative  w-4/6 max-w-64 bottom-8  rounded-xl shadow-3xl" src={image} alt={name}>
  <div class=" flex flex-col  items-center gap-4 ">
    <h1 class="font-extrabold text-4xl w-full text-center">{name}</h1>
    <h2 class=" text-sky-400 text-lg">{label}</h2>
    <div class="w-3/4 my-4 flex justify-center flex-wrap items-center gap-4 ">
      {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network]
            return (
              <a
                class={`${network} w-40 text-lg flex items-center gap-4 hover:scale-105`}
                href={url}
                title={`Visitar el perfil de ${username} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="fondo">
                  <Icon/>
                </span>
                {network}
              </a>
            )
          })
      }
    </div>
    <div class="mb-8 ">
      <a class="bg-sky-400 font-light text-center px-6 py-3 rounded-lg shadow-md flex gap-2 hover:scale-105 active:shadow-[inset_10px_10px_15px_-3px_#00000020] text-white " href="https://drive.google.com/file/d/12uCQzkQrNeMiCkPKlgPBexKTn2odNq1M/view?usp=drive_link" download="CV Sergio Alba"><Download/> Descargar CV</a>
    </div>
  </div> 
</section>
<style is:global>
  .LinkedIn:hover  {
    color:#0095ff ;
    transition: color 100ms ease-in;
  }
  .X:hover{
    color:#7e7e7e;
    transition: color 100ms ease-in;
  }
  .GitHub:hover{
    color: rgb(243, 109, 94);
    transition: color 100ms ease-in;
  }
  .fondo{
    @apply inline-block bg-white/10  px-4 py-2 rounded-lg shadow-lg dark:shadow-xl 
  }
</style>


