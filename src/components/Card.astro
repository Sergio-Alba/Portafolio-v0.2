---
// import type { any, string } from 'astro/zod'

interface Props{
  title:string,
  url:string,
  description:string,
  image:string|any,
}
const { title, url, description, image } = Astro.props;
---

<article class="w-96 h-80  overflow-hidden relative lg:w-[45%] lg:h-max">
  <img 
  src={image} 
  alt=`imagen de ${title}`
  class="w-full object-contain">
  <section class="bg-white/10 backdrop-blur-md absolute bottom-0 shadow-lg z-0  p-2">
    <div class="w-full h-16 flex justify-between items-center">
      <h1 class="text-3xl font-black text-teal-500">
        {title}
      </h1>
      <a 
        class=" w-16 py-1 text-center text-lg font-black text-white bg-sky-500 rounded-lg"
        href={url} 
        target="_blank" 
        rel="noopener noreferrer">
        Ver
      </a>
    </div>
    <div class="flex justify-center flex-wrap items-center ">
      <p class="w-full py-2 text-white  font-light text-base  ">{description}</p>
    </div>
  </section>
</article>
