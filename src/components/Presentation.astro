---
import { basics } from "@cv";
import type {Icons} from "@/img";
import Download from "@/icons/download.astro";
import LinkedIn from "@/icons/linkedin.astro";
import GitHub from "@/icons/skills/github.astro";

const {profiles} = basics;
const SOCIAL_ICONS:Icons = {
  LinkedIn,
  GitHub
};


---
<section class="w-full h-[90vh]  py-8 px-4 bac lg:mx-auto lg:flex lg:items-center lg:justify-evenly  ">
  <img src="./darth_vader-removebg-preview.png" alt="" class="img-profile mb-6 ">
  <div class="flex flex-col items-center  gap-5">
    <h1 class="  text-center text-purple-500 text-xl ">Front-end Developer</h1>
    <h2 class="text-2xl text-center first-letter:text-sky-600 first-letter:text-3xl first-letter:font-bold lg:text-3xl lg:first-letter:text-4xl">
      Bienvenido a mi portafolio <br>
      <span class="text-base ">Me llamo Sergio puedes contactarme atravez de mis redes.</span>
    </h2>
    <section class="flex flex-col gap-4  ">
      <div class="flex justify-center items-center gap-3 ">
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network]
            return (
              <a
                class={`${network} w-auto text-lg flex items-center gap-4 hover:scale-105`}
                href={url}
                title={`Visitar el perfil de ${username} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                  <Icon class="size-12"/>
              </a>
            )
          })
      }
      </div>
      <a class="bg-gradient-to-r from-green-400/75 to-blue-500/75 hover:from-green-400 hover:to-blue-400 transition-all text-xl text-center px-8 py-5  rounded-lg shadow-md flex gap-2 hover:scale-105 active:shadow-[inset_10px_10px_15px_-3px_#00000020] text-white " href="https://drive.google.com/file/d/12uCQzkQrNeMiCkPKlgPBexKTn2odNq1M/view?usp=drive_link" download="CV Sergio Alba"><Download/> Descargar CV</a>
    </section>
  </div>
</section>
<style>


  .img-profile{
    filter: drop-shadow(0 0 25px #8cfff9) ;
  }
  
</style>