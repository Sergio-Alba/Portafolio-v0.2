---
import Profile from '@/components/Profile.astro';
import Nav from '@/components/Nav.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-sky-50  dark:bg-sky-950 dark:text-gray-300 w-screen lg:h-screen my-24 flex flex-col lg:flex-row gap-16 md:gap-8 justify-evenly items-center  font-jetBrains  lg:justify-center lg:px-24 ">
		<Profile/>
		<main class="w-4/5   lg:w-3/6 rounded-2xl p-6 dark:bg-gray-800 bg-white lg:h-4/5 overflow-y-scroll">
			<slot />
		</main>
		<Nav/>
		
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap');
	*{
		font-family: "JetBrains Mono", monospace;
	}
	body{
		background: url(/fondoTeclas.png) top fixed no-repeat ;
		background-size: cover;
	}
</style>
